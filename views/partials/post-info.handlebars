<article class="post">
    <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{format_url post_url}})</span>
    </div>
    <div class="meta">
        {{user.username}} on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}}</a>
    </div>
</article>